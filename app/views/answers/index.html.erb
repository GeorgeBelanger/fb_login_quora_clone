<p id="notice"><%= notice %></p>

<h1>Answers</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Question</th>
      <th>Vote score</th>
      <th>Up vote</th>
      <th>Down vote</th>
      <th>Answer context</th>
      <th>Answer body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.user %></td>
        <td><%= answer.question %></td>
        <td><%= answer.vote_score %></td>
        <td><%= answer.up_vote %></td>
        <td><%= answer.down_vote %></td>
        <td><%= answer.answer_context %></td>
        <td><%= answer.answer_body %></td>
        <td><%= link_to 'Show', answer %></td>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Answer', new_answer_path %>
